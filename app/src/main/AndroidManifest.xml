<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.jorisfavier.youshallnotpass">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YSNPApplication"
        android:allowBackup="true"
        android:icon="@drawable/ysnp_small"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YouShallNotPass">

        <service
            android:name=".service.YsnpAutofillService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>

            <meta-data
                android:name="android.autofill"
                android:resource="@xml/autofill_configuration" />
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="fr.jorisfavier.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.auth.AuthActivity" />
        <activity android:name=".ui.desktop.DesktopConnectionActivity" />
        <activity android:name=".ui.autofill.AutofillActivity" />
        <activity
            android:name=".ui.settings.importitem.ImportItemActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.YouShallNotPass.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>